import * as cdk from 'aws-cdk-lib';
import { Construct } from 'constructs';
import * as lambda from 'aws-cdk-lib/aws-lambda';
import * as apigateway from 'aws-cdk-lib/aws-apigateway';
import * as path from 'path';

export class WorkingDaysApiStack extends cdk.Stack {
  constructor(scope: Construct, id: string, props?: cdk.StackProps) {
    super(scope, id, props);

    // Lambda function that contains the Express app
    const apiLambda = new lambda.Function(this, 'WorkingDaysApiLambda', {
      runtime: lambda.Runtime.NODEJS_18_X,
      handler: 'main.handler', // Assumes a handler wrapper around the express app
      code: lambda.Code.fromAsset(path.join(__dirname, '../../dist')), // Point to the built JS files
      environment: {
        // You should use Secrets Manager for production URIs
        MONGO_URI: 'YOUR_PRODUCTION_MONGO_URI',
        HOLIDAY_API_URL: 'https://content.capta.co/Recruitment/WorkingDays.json',
        HOLIDAY_CACHE_TTL_SECONDS: '86400',
      },
      timeout: cdk.Duration.seconds(30),
    });

    // API Gateway to expose the Lambda function
    new apigateway.LambdaRestApi(this, 'WorkingDaysEndpoint', {
      handler: apiLambda,
      proxy: true, // Requests are proxied to the Lambda
    });
  }
}
